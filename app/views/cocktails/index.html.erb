<%= render "shared/banner", button_text: "See all drinks!", image_path: "https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=1998822d443cf97d75258149476c5aa5&auto=format&fit=crop&w=1349&q=80", description_banner: true %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(cocktail) do %>
      <!-- insert <div class="card"> -->
        <div class="card" style="background-image: url('<%= cl_image_path cocktail.photo %>')">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

