<div class="container">
  <h1>Pick an ingredient</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="form-inputs">
      <%= f.association :ingredient, collection: Ingredient.order('name ASC') %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  <% end %>
</div>
