<div class="container text-center padded">
  <div class="grid">
    <div class="card main-section" style="background-image:url('<%= cl_image_path @cocktail.photo%>'); background-size: cover ">
      <div class="card-content" >

      </div>
    </div>
    <div class="card title">
      <div class="card-content">
        <h1><%= cocktail_name %></h1>
      </div>
    </div>

    <div class="card about-section">
      <div class="card-content">
        <h3>Ingredients</h3>
        <div class="row">
          <% cocktail_doses.each do |dose| %>
            <div class="col-xs-3">

              <h4><%= dose.ingredient.name %></h4>
              <p style="font-size: 18px;">
                <%= dose.description %>
                <br>
                <%= link_to "", dose_path(dose),
                  method: :delete,
                  data: {confirm: "Are you sure?"},
                  class: "far fa-trash-alt" %>
              </p>
            </div>
          <% end %>
        </div>
        <%= link_to "Add ingredient", link_to_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
